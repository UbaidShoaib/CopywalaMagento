<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="checkout_cart_product_add_after">
        <observer name="netbaseteam_pricingoption_checkout_cart_product_add_after"
                  instance="Netbaseteam\PricingOption\Observer\Checkout\CheckoutCartProductAddAfterObserver"/>
    </event>

    <event name="sales_model_service_quote_submit_before">
        <observer name="netbaseteam_pricingoption_sales_model_service_quote_submit_before"
                  instance="Netbaseteam\PricingOption\Observer\Checkout\SalesModelServiceQuoteSubmitBeforeObserver"/>
    </event>
    
    <event name="checkout_cart_update_items_after">
        <observer name="netbaseteam_pricingoption_sales_model_service_quote_submit_before"
                  instance="Netbaseteam\PricingOption\Observer\Cart\UpdateItemsAfter"/>
    </event>
</config>